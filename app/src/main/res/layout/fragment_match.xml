<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchFragment">

    <ImageView
        android:id="@+id/matchPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/matchActionContainer"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/matchActionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchPhoto"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="@dimen/match_action_icon_size"
            android:layout_height="@dimen/match_action_icon_size"
            android:src="@drawable/star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/favoriteIcon"/>

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="@dimen/match_action_icon_size"
            android:layout_height="@dimen/match_action_icon_size"
            android:src="@drawable/favorite"
            app:layout_constraintLeft_toRightOf="@+id/starIcon"
            app:layout_constraintRight_toLeftOf="@+id/flameIcon"/>

        <ImageView
            android:id="@+id/flameIcon"
            android:layout_width="@dimen/match_action_icon_size"
            android:layout_height="@dimen/match_action_icon_size"
            android:src="@drawable/flame"
            app:layout_constraintLeft_toRightOf="@id/favoriteIcon"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>